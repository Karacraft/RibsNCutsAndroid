<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/lv_showProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_BG"
            android:layout_width="363dp"
            android:layout_height="94dp"
            android:background="@drawable/bg2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_BG"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@id/textView5"
            android:layout_marginRight="@dimen/medium_margin"
            android:text="TextView"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_below="@id/textView5"
            android:text="Email"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView7"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@id/tv_userName"
            android:text="TextView"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="Contact"
            android:textStyle="bold"
            android:layout_below="@id/textView7"
            />

        <EditText
            android:id="@+id/tv_userContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@id/tv_userEmail"
            android:layout_toRightOf="@id/textView9"
            android:inputType="text"
            android:text="TextView"
            android:textSize="@dimen/medium_font_size"
            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView9"
            android:text="Address"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/tv_userAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@id/tv_userContact"
            android:layout_toRightOf="@id/textView11"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:singleLine="false"
            android:text="TextView"
            android:textSize="@dimen/medium_font_size"
            />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_below="@id/tv_userAddress"
            android:text="Cell Number"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/tv_userCellNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@id/tv_userAddress"
            android:layout_toRightOf="@id/textView13"
            android:inputType="number"
            android:text="TextView"
            android:textSize="@dimen/medium_font_size"
            />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView13"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Landline Number"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/tv_userLandLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_toRightOf="@id/textView13"
            android:layout_below="@id/tv_userCellNumber"
            android:inputType="number"
            android:text="TextView"
            android:textSize="@dimen/medium_font_size"
            />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="120dp"
            android:layout_height="19dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView15"
            android:text="City"
            android:textStyle="bold"
             />

        <EditText
            android:id="@+id/tv_userCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@id/tv_userLandLine"
            android:layout_toRightOf="@id/textView15"
            android:inputType="text"
            android:text="TextView"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/tv_userLandLine" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="156dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:drawableStart="@drawable/ic_person_white_24dp"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:gravity="center"
            android:text="Your Profile"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnUpdateUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Update User Profile"
            android:theme="@style/AppTheme.ButtonSuccess"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_emptyProfile"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:text="Please Login to see your Profile"
        android:textSize="@dimen/medium_font_size" />

</FrameLayout>